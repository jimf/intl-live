{
  "name": "intl-live",
  "version": "0.1.0",
  "description": "Live editor for CLDR-formatted l10n strings",
  "homepage": "https://github.aweber.io/jimf/intl-live",
  "repository": {
    "type": "git",
    "url": "https://github.aweber.io/jimf/intl-live.git"
  },
  "private": true,
  "scripts": {
    "dist": "npm run dist-js && npm run dist-css",
    "dist-css": "uglifycss node_modules/quill/dist/quill.snow.css css/normalize.css css/skeleton.css css/main.css > dist/intl-live.min.css",
    "dist-js": "browserify src/main.js -o dist/intl-live.js && uglifyjs dist/intl-live.js -o dist/intl-live.min.js",
    "start": "budo src/main.js --live --open",
    "test": "tape -r test/index.js | tap-spec"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "comments": false
        }
      ]
    ]
  },
  "license": "MIT",
  "dependencies": {
    "babel-polyfill": "^6.3.14",
    "data.either": "^1.4.0",
    "intl-messageformat": "^1.3.0",
    "intl-messageformat-parser": "^1.2.0",
    "quill": "^0.20.1",
    "ramda": "^0.21.0",
    "react": "^15.2.1",
    "react-dom": "^15.2.1",
    "react-hyperscript": "^2.4.0",
    "react-quill": "github:zenoamaro/react-quill#v0.4.0",
    "react-redux": "^4.4.5",
    "react-tabs": "^0.7.0",
    "redux": "^3.5.2",
    "redux-actions": "^0.10.1",
    "redux-thunk": "^2.1.0",
    "reselect": "^2.5.3"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-react": "^7.0.0",
    "babelify": "^10.0.0",
    "budo": "^8.3.0",
    "jsdom": "^9.4.1",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.0",
    "testdom": "^2.0.0",
    "uglify-js": "^2.7.0",
    "uglifycss": "0.0.20"
  }
}
