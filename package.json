{
  "name": "intl-live",
  "version": "0.1.0",
  "description": "Live editor for CLDR-formatted l10n strings",
  "homepage": "https://github.aweber.io/jimf/intl-live",
  "repository": {
    "type": "git",
    "url": "https://github.aweber.io/jimf/intl-live.git"
  },
  "private": true,
  "scripts": {
    "build": "npm run build-js && npm run build-css",
    "build-css": "uglifycss node_modules/quill/dist/quill.snow.css css/normalize.css css/skeleton.css css/main.css > dist/intl-live.min.css",
    "build-js": "browserify src/index.js -o dist/intl-live.js && uglifyjs dist/intl-live.js -o dist/intl-live.min.js",
    "deploy": "gh-pages -d dist",
    "start": "budo src/index.js --live --open --host=localhost",
    "test": "jest --coverage"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "comments": false
        }
      ]
    ]
  },
  "license": "MIT",
  "dependencies": {
    "babel-polyfill": "^6.3.14",
    "data.either": "^1.4.0",
    "intl-messageformat": "^1.3.0",
    "intl-messageformat-parser": "^1.2.0",
    "prop-types": "^15.7.2",
    "quill": "^0.20.1",
    "react": "^15.2.1",
    "react-dom": "^15.2.1",
    "react-quill": "github:zenoamaro/react-quill#v0.4.0",
    "react-redux": "^4.4.5",
    "react-tabs": "^0.7.0",
    "redux": "^4.0.1",
    "reselect": "^2.5.3"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-react": "^7.0.0",
    "babelify": "^10.0.0",
    "budo": "^11.6.1",
    "gh-pages": "^2.0.1",
    "jest": "^24.5.0",
    "uglify-js": "^3.5.2",
    "uglifycss": "0.0.29"
  }
}
